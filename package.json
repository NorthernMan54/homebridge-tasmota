{
  "displayName": "Tasmota",
  "name": "homebridge-tasmota",
  "version": "0.2.0",
  "description": "Homebridge plugin for Tasmota devices leveraging home assistant auto discovery.",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git://github.com/NorthernMan54/homebridge-tasmota.git"
  },
  "bugs": {
    "url": "https://github.com/NorthernMan54/homebridge-tasmota/issues"
  },
  "engines": {
    "homebridge": "^1.6.0 || ^2.0.0-beta.0",
    "node": "^18.20.4 || ^20.15.1"
  },
  "main": "dist/index.js",
  "scripts": {
    "lint": "eslint --fix src/**.ts",
    "oldWatch": "npm run build && npm link && nodemon",
    "watch": "nodemon",
    "build": "rimraf ./dist && tsc",
    "prepublishOnly": "npm run lint && npm run build",
    "document": "./gh-md-toc --hide-footer DEVICES.md"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts",
    "ignore": [],
    "exec": "tsc && DEBUG=-mqtt-packet:*,-mqttjs:*,-engine*,-avvio,-follow-redirects,-socket.io:*,-socket.io-parser,Tasmota* homebridge -U ./hbConfig -T -D -P .",
    "signal": "SIGTERM",
    "env": {
      "NODE_OPTIONS": "--trace-warnings"
    }
  },
  "keywords": [
    "homebridge-plugin",
    "tasmota"
  ],
  "dependencies": {
    "debug": "^4.3.7",
    "fakegato-history": "^0.6.5",
    "mqtt": "^5.10.1",
    "nunjucks": "^3.2.x"
  },
  "devDependencies": {
    "@types/node": "^22.7.5",
    "@typescript-eslint/eslint-plugin": "^8.8.1",
    "@typescript-eslint/parser": "^8.8.1",
    "eslint": "^9.12.0",
    "homebridge": "^2.0.0-beta.22",
    "nodemon": "^3.1.7",
    "rimraf": "^6.0.1",
    "semver": "^7.6.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3"
  },
  "homepage": "https://github.com/NorthernMan54/homebridge-tasmota#readme"
}
