{
  "displayName": "Homebridge Tasmota",
  "name": "homebridge-tasmota",
  "version": "0.0.101",
  "description": "Homebridge plugin for Tasmota devices leveraging home assistant auto discovery.",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git://github.com/NorthernMan54/homebridge-tasmota.git"
  },
  "bugs": {
    "url": "https://github.com/NorthernMan54/homebridge-tasmota/issues"
  },
  "engines": {
    "node": ">=10.17.0",
    "homebridge": ">0.4.53"
  },
  "main": "dist/index.js",
  "scripts": {
    "lint": "eslint --fix src/**.ts",
    "oldWatch": "npm run build && npm link && nodemon",
    "watch": "nodemon",
    "build": "rimraf ./dist && tsc",
    "prepublishOnly": "npm run lint && npm run build"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts",
    "ignore": [],
    "exec": "DEBUG= tsc && DEBUG= homebridge -T -I -D -R -P ..",
    "signal": "SIGTERM",
    "env": {
      "NODE_OPTIONS": "--trace-warnings"
    }
  },
  "keywords": [
    "homebridge-plugin",
    "tasmota"
  ],
  "dependencies": {
    "debug": "4.3.x",
    "fakegato-history": "0.6.x",
    "mqtt": "4.2.x",
    "nunjucks": "3.2.x"
  },
  "devDependencies": {
    "@types/node": "^14.0.27",
    "@typescript-eslint/eslint-plugin": "^3.9.0",
    "@typescript-eslint/parser": "^3.9.0",
    "eslint": "^7.7.0",
    "homebridge": "^1.3.0-beta.47",
    "nodemon": "^2.0.4",
    "rimraf": "^3.0.2",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  }
}
